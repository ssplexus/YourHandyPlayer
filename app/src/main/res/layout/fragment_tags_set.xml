<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.TagsSetFragment"
    android:visibility="visible"
    tools:visibility="visible"
    android:layout_marginBottom="25dp">

    <GridLayout
        android:id="@+id/tags_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:text=" Select your tags"
            android:textAlignment="center"
            android:textColor="@color/blue_100"
            android:textSize="26sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="50"
                android:background="@drawable/round_shape">

                <Switch
                    android:id="@+id/rock_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rock"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="50"
                android:background="@drawable/round_shape">

                <Switch
                    android:id="@+id/pop_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pop"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="50"
                android:background="@drawable/round_shape">

                <Switch
                    android:id="@+id/rnb_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="R &amp; B"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="50"
                android:background="@drawable/round_shape">

                <Switch
                    android:id="@+id/electronic_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Electronic"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </LinearLayout>


    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/forward_button"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="80dp"

        android:backgroundTint="#43A047"
        android:text="  ACCEPT"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationZ="15dp"

        app:cornerRadius="30dp"
        app:iconGravity="textStart"
        app:iconPadding="-10dp"

        app:iconSize="50dp"
        app:iconTint="@color/white"
        app:icon="@drawable/ic_baseline_check_circle_outline_24"

        app:strokeColor="@color/white_transp"
        app:strokeWidth="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>